<Window x:Class="Presentacion.WindowConcesionario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        Title="Concesionarios" Height="320" Width="745" Background="#FFF9D9C3">
    <Grid Height="294" VerticalAlignment="Center" RenderTransformOrigin="0.681,0.386">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.104"/>
                <TranslateTransform X="-0.096" Y="-0.264"/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Label HorizontalAlignment="Left" Margin="15,103,0,0" VerticalAlignment="Top">
            <Label Content="Fecha de Inicio:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Label>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="20,75,0,0" VerticalAlignment="Top"/>
        <Label Content="Código:" HorizontalAlignment="Left" Margin="20,44,0,0" VerticalAlignment="Top"/>
        <Label Content="Dueño:" HorizontalAlignment="Left" Margin="20,140,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbCodigo" HorizontalAlignment="Left" Margin="125,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="tbNombre" HorizontalAlignment="Left" Margin="125,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <DatePicker x:Name="datePFechaInicio" HorizontalAlignment="Left" Margin="125,110,0,0" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="tbDueño" HorizontalAlignment="Left" Margin="125,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <Button x:Name="btnRegistrar" Content="Registrar" HorizontalAlignment="Left" Margin="75,188,0,0" VerticalAlignment="Top" Width="140" Click="btnRegistrar_Click"/>
        <Button x:Name="btnListar" Content="Listar" HorizontalAlignment="Left" Margin="75,216,0,0" VerticalAlignment="Top" Width="140" Click="btnListar_Click"/>
        <Button x:Name="btnVehiculos" Content="Ver Vehículos" HorizontalAlignment="Left" Margin="75,246,0,0" VerticalAlignment="Top" Width="140" Click="btnVehiculos_Click"/>
        <Button x:Name="btnOrdenarXFecha" Content="Ordenar por Fecha " HorizontalAlignment="Left" Margin="310,245,0,0" VerticalAlignment="Top" Width="140" Click="btnOrdenarXFecha_Click"/>
        <Button x:Name="btnSalir" Content="Salir" HorizontalAlignment="Left" Margin="565,248,0,0" VerticalAlignment="Top" Width="140" Click="btnSalir_Click"/>
        <DataGrid x:Name="dgConcesionarios" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="310,30,40,91" SelectionChanged="dgConcesionarios_SelectionChanged"/>
    </Grid>
</Window>
